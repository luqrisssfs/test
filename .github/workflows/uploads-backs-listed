name: Acción con Desplegable

on:
  workflow_dispatch:
    inputs:
      opcion:
        description: 'Selecciona una acción'
        required: true
        default: 'accion1'
        type: choice
        options:
          - accion1
          - accion2
          - accion3

jobs:
  ejecutar_accion:
    runs-on: ubuntu-latest
    steps:
      - name: Mostrar acción seleccionada
        run: echo "Has seleccionado: ${{ github.event.inputs.opcion }}"
